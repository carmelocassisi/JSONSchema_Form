{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "/schemas/picture_schema.json",
    "title": "Image",
    "description": "A picture to load to server",
    "type": "object",
    "format": "grid",
    "properties": {
        "file": {
            "type": "string",
            "title": "file",
            "media": {
                "binaryEncoding": "base64",
                "type": "img/png"
            }
        },
        "description": {
            "type": "string",
            "title": "Description"
        }
    }
}
